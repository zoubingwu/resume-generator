{{#each work.experiences}}
  <div class="work">
    <div class="title">
      {{this.title}}
      -
      {{this.company}}
    </div>
    <div class="info">
      <div>{{this.time}}</div>
      <div>{{this.location}}</div>
    </div>

    <ul class="desc">
      {{#each this.desc}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>
{{/each}}

<style>
  .work {
    padding: 0 24px;
    color: var(--dark-800);
    margin-bottom: 8px;
  }

  .work .title {
    font-weight: 700;
    font-size: 18px;
  }

  .work .info {
    color: var(--gray-400);
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-style: italic;
    margin-bottom: 4px;
    margin-top: 4px;
  }

  .work .desc { list-style: disc; padding-left: 24px; font-size: 14px; }
</style>
